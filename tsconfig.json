{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["src/**/*.test.ts"]
}
